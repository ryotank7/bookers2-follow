<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bookers2</title>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container ">
            <nav class="nav navbar-nav navbar-left">
              <span>Bookers</span>
            </nav>
              <% if user_signed_in? %>
              <nav>
                <ul class="nav navbar-nav navbar-right ">
                <li>
                    <%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %>
                </li>
                <li >
                  <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user users"  %>
                </li>
              <li class="">
                  <%= link_to 'Books', books_path,class: "glyphicon glyphicon-book books"  %>
              </li>
              <li class="">
                   <%= link_to "logout",destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
                </li>
              </ul>
              <% else %>
              <ul class="nav navbar-nav navbar-right ">
              <li class="">
                  <%= link_to 'Home', root_path, class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="">
                  <%= link_to 'About', home_about_path , class: "glyphicon glyphicon-link about"%>
              </li>
                <li class="">
                  <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit signup" %>
                </li>
                <li class="">
                  <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in login" %>
                </li>
              </ul>
           </nav>
             <% end %>
      </div>
  </header>

  <span></span>

  <div class="body">
    <div class="container">
      <p id = "notice"><%= notice %></p>
      <div class="row">
    <%= yield %>
  </div>
  </div>
</div>

   <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
            </div>
        </div>
      </div>
    </footer>

  </body>
</html>